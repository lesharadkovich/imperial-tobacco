{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            "tab",
            { "SwitchCase": 1 }
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": ["error"],
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
        "no-console": ["off"],
        "no-var": "error",
        "key-spacing": ["warn", { "align": "colon" }],
        "no-multi-spaces": ["error", {
                "exceptions": {
                    "VariableDeclarator": true,
                    "ImportDeclaration": true
                }
            }
        ]
    }
}